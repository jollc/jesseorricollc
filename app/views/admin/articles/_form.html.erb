<%= form_for (@article) do |f| %>

  <% f.object = @article %>
  <% unless f.object.errors.blank? %>
    <div class="alert">
      <h2>Error:</h2>
      <%= f.object.errors.full_messages %>
    </div>
  <% end %>

  <div class="well">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle %>
    </div>

    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'editor-field' %>
    </div>

    <div class="form-group">
      <% if f.object.image_stored? %>
        <%= image_tag f.object.image.thumb('200x').url  %>
        <%= f.label :remove_image %>
        <%= f.check_box :remove_image %>
      <% end %>
      <br />

      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>

    <hr />

    <div class="text-right">
      <%= link_to "Back", articles_url, class: 'btn btn-default' %>
      <%= f.submit class: 'btn btn-bright' %>
    </div>
  </div>
<% end %>
