<%= form_for @subdomain, as: :_subdomain do |f| %>

  <% unless f.object.errors.blank? %>
    <div class="alert">
      <h2>Error:</h2>
      <%= f.object.errors.full_messages %>
    </div>
  <% end %>

  <div class="well">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
      <p class="help-block">This is the value of the subdomain, i.e. ministries in ministries.cedarpark.org</p>
    </div>

    <div class="form-group">
      <%= f.label :default_layout %>
      <%= f.select :default_layout, f.object.layouts, include_blank: true %>
      <p class="help-block">If blank, then the application layout will be used.</p>
    </div>

    <hr />

    <div class="text-right">
      <%= link_to "Back", subdomains_url, class: 'btn btn-default' %>
      <%= f.submit class: 'btn btn-bright' %>
    </div>
  </div>
<% end %>
